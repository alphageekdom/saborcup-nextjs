// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  summary     String
  importance  String
  cost        Float
  host        String
  image       String
  startDate   DateTime
  endDate     DateTime
  isPast      Boolean
}

model Message {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  subject   String
  message   String
  createdAt DateTime @default(now())
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String
  type        String
  description String
  isFeatured  Boolean
  image       String
}

model Item {
  id            Int       @id @default(autoincrement())
  name          String
  type          String
  availability  String
  description   String
  isFeatured    Boolean
  isSeasonal    Boolean
  images        String[]
  prices        Json     
  sizes         String[]
}